.tagcloud-styled
  text-align center
  margin-top 2rem

.tagcloud-styled a
  margin 0.4rem
  display inline-block
  text-decoration none
  transition transform 0.2s ease, color 0.3s ease
  font-weight bold
  padding 4px 8px
  border-radius 5px

.tagcloud-styled a:hover
  transform scale(1.2) rotate(-2deg)
  color #f36

.tagcloud-styled a:nth-child(5n+1)
  color #FF6B6B

.tagcloud-styled a:nth-child(5n+2)
  color #F7B801

.tagcloud-styled a:nth-child(5n+3)
  color #6BCB77

.tagcloud-styled a:nth-child(5n+4)
  color #4D96FF

.tagcloud-styled a:nth-child(5n)
  color #9D4EDD
